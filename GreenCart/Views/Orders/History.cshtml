@model IEnumerable<GreenCart.Models.Order>

@{
    ViewData["Title"] = "My Order History";
}

<h1>My Order History</h1>
<p>Here you can find all of your past and current orders.</p>
<hr />

@if (Model.Any())
{
    @foreach (var order in Model)
    {
        <div class="card mb-4 shadow-sm">
            <div class="card-header d-flex justify-content-between bg-light">
                <div>
                    <strong>Order #@order.Id</strong>
                    <span class="text-muted ms-3">Placed: @order.OrderDate.ToString("dd MMM yyyy")</span>
                </div>
                <div><strong>Total: @order.TotalAmount.ToString("C")</strong></div>
            </div>
            <div class="card-body">
                <p><strong>Shipping Address:</strong> @order.ShippingAddress</p>

                <h6 class="mt-3">Items in this order:</h6>
                <table class="table table-sm table-striped">
                    <thead class="table-light">
                        <tr>
                            <th>Product</th>
                            <th>Quantity</th>
                            <th>Price</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in order.OrderItems)
                        {
                            <tr>
                                <td>@item.Product.Name</td>
                                <td>x @item.Quantity</td>
                                <td>@item.Price.ToString("C")</td>
                                <td>
                                    <span class="badge bg-primary">@item.Status</span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
}
else
{
    <div class="text-center p-4">
        <p>You haven't placed any orders yet.</p>
        <a class="btn btn-primary" asp-controller="Products" asp-action="Index">Start Shopping</a>
    </div>
}