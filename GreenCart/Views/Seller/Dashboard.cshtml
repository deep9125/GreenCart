@model GreenCart.ViewModels.SellerDashboardViewModel;
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@{
    ViewData["Title"] = "Seller Dashboard";
    var userId = HttpContextAccessor.HttpContext.Session.GetInt32("UserId");
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h1>My Seller Dashboard</h1>
        <p class="text-muted">Manage your product listings and view incoming orders.</p>
    </div>
    <div>
        <a class="btn btn-primary btn-lg" asp-controller="Products" asp-action="Create">
            <i class="bi bi-plus-circle"></i> List a New Product
        </a>
    </div>
</div>
<hr />

<div class="card shadow-sm mb-5">
    <div class="card-header"><h3 class="h5 mb-0">My Product Listings</h3></div>
    <div class="card-body">
        @if (Model.MyProducts.Any())
        {
            <table class="table table-striped table-hover">
                <thead class="table-light">
                    <tr><th>Product Name</th><th>Price</th><th>Stock</th><th class="text-end">Actions</th></tr>
                </thead>
                <tbody>
                    @foreach (var product in Model.MyProducts)
                    {
                        <tr>
                            <td>@product.Name</td>
                            <td>@product.Price.ToString("C")</td>
                            <td>@product.StockQuantity</td>
                            <td class="text-end">
                                <a asp-controller="Products" asp-action="Edit" asp-route-id="@product.Id" class="btn btn-sm btn-warning">Edit</a>
                                <a asp-controller="Products" asp-action="Delete" asp-route-id="@product.Id" class="btn btn-sm btn-danger">Delete</a>
                                <a asp-controller="Products" asp-action="Details" asp-route-id="@product.Id" class="btn btn-sm btn-outline-info">Details</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p class="text-center p-3">You have not listed any products yet.</p>
        }
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-header"><h3 class="h5 mb-0">Incoming Orders</h3></div>
    <div class="card-body">
        @if (Model.IncomingOrders.Any())
        {
            @foreach (var order in Model.IncomingOrders)
            {
                <div class="card mb-3">
                    <div class="card-header bg-light">
                        <strong>Order #@order.Id</strong> | Placed: @order.OrderDate.ToShortDateString() | Buyer: @order.Buyer.FirstName
                    </div>
                    <div class="card-body">
                        <p><strong>Current Status:</strong> <span class="badge bg-primary">@order.Status</span></p>
                        <table class="table table-sm">
                            @foreach (var item in order.OrderItems.Where(oi => oi.Product.SellerId == userId))
                            {
                                <tr>
                                    <td>@item.Product.Name</td>
                                    <td>Quantity: @item.Quantity</td>
                                </tr>
                            }
                        </table>
                        <form asp-controller="Seller" asp-action="UpdateOrderStatus" method="post" class="mt-3">
                            <input type="hidden" name="orderId" value="@order.Id" />
                            <div class="input-group">
                                <select name="status" class="form-select" asp-items="Html.GetEnumSelectList<GreenCart.Models.OrderStatus>()"></select>
                                <button type="submit" class="btn btn-info">Update Status</button>
                            </div>
                        </form>
                    </div>
                </div>
            }
        }
        else
        {
            <p class="text-center p-3">You have no incoming orders.</p>
        }
    </div>
</div>