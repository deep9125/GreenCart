@model GreenCart.Models.Cart

@{
    ViewData["Title"] = "My Shopping Cart";
}

<h1>My Shopping Cart</h1>

@if (Model != null && Model.Items.Any())
{
    <table class="table">
        <thead class="table-light">
            <tr>
                <th>Product</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Subtotal</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>@item.Product.Name</td>
                    <td>@item.Product.Price.ToString("C")</td>
                    <td>@item.Quantity</td>
                    <td>@((item.Product.Price * item.Quantity).ToString("C"))</td>
                    <td class="text-center">
                        <form asp-action="RemoveFromCart" method="post">
                            <input type="hidden" name="cartItemId" value="@item.Id" />
                            <button type="submit" class="btn btn-danger btn-sm">Remove</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="3" class="text-end border-0"><strong>Grand Total:</strong></td>
                <td class="border-0">
                    <strong>@Model.Items.Sum(item => item.Product.Price * item.Quantity).ToString("C")</strong>
                </td>
                <td class="border-0"></td>
            </tr>
        </tfoot>
    </table>
    <div class="text-end mt-3">
        <a class="btn btn-success btn-lg" asp-controller="Orders" asp-action="Checkout">Proceed to Checkout</a>
    </div>
}
else
{
    <div class="text-center p-4">
        <p>Your shopping cart is empty.</p>
        <a class="btn btn-primary" asp-controller="Products" asp-action="Index">Continue Shopping</a>
    </div>
}